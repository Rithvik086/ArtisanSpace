<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <div class="cardpar">
            <div class="cardsign">
                <div class="left-sidesign">
                    <div class="logo"></div>
                    <p>Sign-in</p>
                    <div class="form">
                        <input type="email" placeholder="Email" required>
                        <input type="password" placeholder="Password">
                        <button>Sign Up</button>
                        <div class="login-text">
                            Already have an account? <a href="#" onclick="flipCard()">login here</a>
                        </div>
                    </div>
                </div>
                <div class="right-sidesign">
                    <div class="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item">
                                <img src="photo/murti-removebg-preview.png" alt="Sign up feature 1">
                            </div>
                            <div class="carousel-item">
                                <img src="/api/placeholder/300/200" alt="Sign up feature 2">
                            </div>
                            <div class="carousel-item">
                                <img src="/api/placeholder/300/200" alt="Sign up feature 3">
                            </div>
                        </div>
                        <div class="carousel-dots"></div>
                    </div>
                </div>
            </div>
            <div class="cardlog">
                <div class="left-sidelog">
                    <div class="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item">
                                <img src="/api/placeholder/300/200" alt="Login feature 1">
                            </div>
                            <div class="carousel-item">
                                <img src="/api/placeholder/300/200" alt="Login feature 2">
                            </div>
                            <div class="carousel-item">
                                <img src="/api/placeholder/300/200" alt="Login feature 3">
                            </div>
                        </div>
                        <div class="carousel-dots"></div>
                    </div>
                </div>
                <div class="right-sidelog">
                    <div class="logolog"></div>
                    <p>Login-in</p>
                    <div class="form">
                        <input type="email" placeholder="Email" required>
                        <input type="password" placeholder="Password">
                        <button>Log in</button>
                        <div class="signup-text">
                            Don't have an account? <a href="#" onclick="flipCard()">SignUp here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
