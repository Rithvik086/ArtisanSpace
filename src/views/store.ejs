<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title></title>
  <link rel="stylesheet" href="/header1.css">
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@400..800&family=Kranky&display=swap");

    body {
      width: 100vw;
      display: flex;
      flex-direction: column;
    }

    body::-webkit-scrollbar {
      display: none;
    }

    a {
      color: black;
      text-decoration: none;
      transition: color 0.3s ease-in-out;
    }

    a:hover {
      color: #fc5a6d;
    }

    .container2 {
      font-family: "Baloo Bhai 2";
      font-size: 16px;
      margin-top: 40px;
    }

    .product-list {
      list-style: none;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 20px;
      padding: 0;
    }

    .product-card {
      padding: 6px 0 0 0;
      text-align: center;
      width: 320px;
      height: 400px;
      border: 4px solid rgba(0, 0, 0, 0.08);
      border-radius: 10px;
    }

    img {
      width: 300px;
      height: 240px;
      border-radius: 7px;
    }

    hr {
      height: 4px;
      border: none;
      background-color: rgba(0, 0, 0, 0.08);
    }

    .details {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 12px;
      align-items: center;
      flex-grow: 1;
      width: 100%;
      height: 120px;
      padding: 8px;
    }

    .details .price {
      margin-top: -2px;
    }

    .old-price {
      text-decoration: line-through;
      font-size: 17px;
      color: gray;
      margin-right: 8px;
    }

    .new-price {
      font-size: 17px;
      color: green;
      font-weight: bold;
    }

    .details button {
      background-color: #fc5a6d;
      border: none;
      border-radius: 8px;
      color: white;
      font-size: 14px;
      font-weight: bold;
      width: 100px;
      height: 30px;
      margin-bottom: -10px;
    }

    .details button:hover {
      background-color: white;
      color: #fc5a6d;
      border: 2px solid #fc5a6d;
    }
  </style>
</head>

<body>
  <%- include("partials/header") %>
    <%- include("partials/navbar") %>
      <div class="container2">

        <ul class="product-list">
          <% products.forEach(product=> { %>
            <li><%- include("partials/product-card", {product}) %></li>
            <%})%>
        </ul>
      </div>
</body>

</html>