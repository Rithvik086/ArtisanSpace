<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Id</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="pending-products">
    <% pendingProducts.forEach((product)=>{ %>
    <tr id="product-<%= product.productId %>">
      <td class="product-name">
        <img src="<%= product.image %>" class="product-img" alt="<%= product.name %>">
      </td>
      <td class="product-name"><%= product.name %></td>
      <td><%= product.productId %></td>
      <td><%= product.quantity %></td>
      <td><s>₹<%= product.oldPrice %></s> <br><span class="price">₹<%= product.newPrice %></span></td>
      <td><%= product.type %></td>
      <td>
        <button class="btn approve-btn" data-id="<%= product.productId %>">Approve</button>
        <button class="btn disapprove-btn" data-id="<%= product.productId %>">Disapprove</button>
      </td>
    </tr>
    <%}); %>
  </tbody>
</table>