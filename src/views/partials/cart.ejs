<div id="cartBox" class="box">
  <h3>Shopping Cart</h3>
  <div class="products">
    <% cart.forEach( item => { %>
    <div class="cart-item">
      <img src="<%= item.productId.image %>" alt="<%= item.productId.name %>" class="product-img">
      <div class="product-details">
        <h3><%= item.productId.name %></h3>
        <p><%= "₹"+item.productId.newPrice %></p>
      </div>
      <div class="quantity-controls">
        <button class="quantity-btn" onclick="updateCart('<%= userId %>', '<%= item.productId._id.toString() %>', 'del')">-</button>
        <input type="number" class="quantity-input" name="quantity" id="<%= item.productId._id.toString() %>" value="<%=item.quantity%>">
        <button class="quantity-btn" onclick="updateCart('<%= userId %>', '<%= item.productId._id.toString() %>', 'add')">+</button>
      </div>
      <p class="remove" onclick="updateCart('<%= userId %>', '<%= item.productId._id.toString() %>', 'rem')">✖ REMOVE</p>
    </div>
    <% }) %>
  </div>
  <div class="total">Total Amount: ₹ <%= amount %></div>
</div>