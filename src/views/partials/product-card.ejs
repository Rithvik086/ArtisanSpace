<div class="product-card">
  <a href="/products/<%= product.id%>">
    <img src="<%= product.image %>" alt="<%= product.name %>" />
  </a>
  <hr>
  <div class="details">
    <a href="/products/<%= product.id%>">
      <h3>
        <%= product.name %>
      </h3>
    </a>
    <p class="price">
      <span class="old-price">
        <%= "₹"+product.oldPrice %>
      </span> <span class="new-price">
        <%= "₹"+product.newPrice %> inc. GST
      </span>
    </p>
    <button onclick="updateCart('<%= userId %>', '<%= product.id %>')">Add to Cart</button>
  </div>
</div>