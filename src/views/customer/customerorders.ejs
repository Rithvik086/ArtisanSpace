        /* Button Box */
        .button-box {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 20px;
        }

        /* Button Box */
        .button-box {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 20px;
        }

        .button-box button {
            padding: 12px 24px;
            cursor: pointer;
            border: none;
            font-size: 16px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .button-box button:hover {
            opacity: 0.8;
        }

        #cartBtn {
            background-color: #007BFF;
            color: white;
        }

        #historyBtn {
            background-color: #28a745;
            color: white;
        }

        /* Content Box */
        .box {
            background: white;
            border-radius: 10px;
            padding: 20px;
            width: 90%;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .products {
            display: flex;
            flex-direction: column;
            gap: 15px;
            padding: 10px;
        }

        .cart-item, .history-item {
            display: flex;
            align-items: center;
            background: #fff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            justify-content: space-between;
        }

        .product-img {
            width: 60px;
            height: 60px;
            border-radius: 5px;
        }

        .product-details {
            flex-grow: 1;
            text-align: left;
            padding: 0 15px;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .quantity-btn {
            background: #007BFF;
            color: white;
            border: none;
            padding: 5px 12px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }

        .quantity-btn:hover {
            background: #0056b3;
        }

        .quantity-number {
            font-size: 18px;
            width: 30px;
            text-align: center;
            font-weight: bold;
        }

        .remove {
            color: red;
            font-size: 14px;
            cursor: pointer;
        }

        .total {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }

        /* Responsive Design */
        @media (max-width: 600px) {
            .box {
                width: 95%;
            }

            .cart-item, .history-item {
                flex-direction: column;
                text-align: center;
            }

            .product-details {
                text-align: center;
            }

            .quantity-controls {
                justify-content: center;
            }
        }
</style>
</head>
<body>
  <%- include('../partials/navbar2', { role }) %>
  <main>
    <!-- Button Box -->
    <div class="button-box">
      <button id="cartBtn">Cart</button>
      <button id="historyBtn">Product History</button>
  </div>

  <!-- Content Box -->
  <div id="contentBox">
      <div id="cartBox" class="box">
          <h3>Shopping Cart</h3>
          <div class="products">
              <div class="cart-item">
                  <img src="https://via.placeholder.com/80" alt="Product 1" class="product-img">
                  <div class="product-details">
                      <h3>Product 1</h3>
                      <p>Price: $10</p>
                  </div>
                  <div class="quantity-controls">
                      <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
                      <span class="quantity-number">2</span>
                      <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
                  </div>
                  <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
              </div>

              <div class="cart-item">
                  <img src="https://via.placeholder.com/80" alt="Product 2" class="product-img">
                  <div class="product-details">
                      <h3>Product 2</h3>
                      <p>Price: $15</p>
                  </div>
                  <div class="quantity-controls">
                      <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
                      <span class="quantity-number">1</span>
                      <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
                  </div>
                  <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
              </div>
          </div>

          <div class="total">Total Amount: $35</div>
      </div>
  </div>
  </main>
  <%- include("../partials/footer") %>
  <script>
     function updateQuantity(button, change) {
            let quantitySpan = button.parentElement.querySelector('.quantity-number');
            let currentQuantity = parseInt(quantitySpan.innerText);
            let newQuantity = currentQuantity + change;

            if (newQuantity < 1) newQuantity = 1; // Prevent negative values
            quantitySpan.innerText = newQuantity;
        }

        function removeItem(button) {
            button.closest('.cart-item').remove();
        }

        function loadCart() {
            document.getElementById("contentBox").innerHTML = `
                <div id="cartBox" class="box">
                    <h3>Shopping Cart</h3>
                    <div class="products">
                        <div class="cart-item">
                            <img src="https://via.placeholder.com/80" alt="Product 1" class="product-img">
                            <div class="product-details">
                                <h3>Product 1</h3>
                                <p>Price: $10</p>
                            </div>
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
                                <span class="quantity-number">2</span>
                                <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
                            </div>
                            <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
                        </div>

                        <div class="cart-item">
                            <img src="https://via.placeholder.com/80" alt="Product 2" class="product-img">
                            <div class="product-details">
                                <h3>Product 2</h3>
                                <p>Price: $15</p>
                            </div>
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
                                <span class="quantity-number">1</span>
                                <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
                            </div>
                            <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
                        </div>
                    </div>
                    <div class="total">Total Amount: $35</div>
                </div>
            `;
        }

        function loadHistory() {
            document.getElementById("contentBox").innerHTML = `
                <div id="historyBox" class="box">
                    <h3>Product History</h3>
                    <div class="products">
                        <div class="history-item">
                            <img src="https://via.placeholder.com/80" alt="Product 1" class="product-img">
                            <div class="product-details">
                                <h3>Product 1</h3>
                                <p>Order Date: 2024-03-01</p>
                                <p>Delivery Status: <b>Delivered</b></p>
                                <p>Last Modified: 2024-03-02</p>
                                <p>Address: 123 Street, City</p>
                            </div>
                        </div>

                        <div class="history-item">
                            <img src="https://via.placeholder.com/80" alt="Product 2" class="product-img">
                            <div class="product-details">
                                <h3>Product 2</h3>
                                <p>Order Date: 2024-02-28</p>
                                <p>Delivery Status: <b>In Transit</b></p>
                                <p>Last Modified: 2024-03-05</p>
                                <p>Address: 456 Avenue, City</p>
                            </div>
                        </div>

                        <div class="history-item">
                            <img src="https://via.placeholder.com/80" alt="Product 3" class="product-img">
                            <div class="product-details">
                                <h3>Product 3</h3>
                                <p>Order Date: 2024-02-25</p>
                                <p>Delivery Status: <b>Pending</b></p>
                                <p>Last Modified: Not Yet</p>
                                <p>Address: 789 Road, City</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }
        document.getElementById("cartBtn").addEventListener("click", loadCart);
        document.getElementById("historyBtn").addEventListener("click", loadHistory);
  </script>
</body>

</html>