<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/navbar2.css" />
  <link rel="stylesheet" href="/customer/customerOrders.css">
  <link rel="stylesheet" href="/footer.css" />
</head>

<body>
  <%- include('../partials/navbar2', { role }) %>
  <main>
    <div class="button-box">
      <button id="cartBtn">Cart</button>
      <button id="historyBtn">Product History</button>
    </div>

    <div id="contentBox">
      <div id="cartBox" class="box">
        <h3>Shopping Cart</h3>
        <div class="products">
          <%- include("../partials/cart", {cart, products, userId}) %>
        </div>
        <div class="total">Total Amount: $35</div>
      </div>
    </div>
  </main>
  <%- include("../partials/footer") %>
  <script>
    async function updateCart(userId, productId, action) {
      try {
        const response = await fetch(`/customer/orders?userId=${userId}&productId=${productId}&action=${action}`, {
          method: "POST",
        });

        const data = await response.json();
        console.log(data.message);

        refreshCart();
      } catch (error) {
        console.error("Error updating cart:", error);
      }
    }

    async function refreshCart() {
      try {
        const response = await fetch("/customer/orders", {
          headers: {
            "X-Requested-With": "XMLHttpRequest"
          },
        });
        const html = await response.text();
        document.querySelector(".products").innerHTML = html;
      } catch (error) {
        console.error("Error refreshing cart:", error);
      }
    }


    function loadCart() {
      document.getElementById("contentBox").innerHTML = `
  <div id="cartBox" class="box">
    <h3>Shopping Cart</h3>
    <div class="products">
      <div class="cart-item">
        <img src="https://via.placeholder.com/80" alt="Product 1" class="product-img">
        <div class="product-details">
          <h3>Product 1</h3>
          <p>Price: $10</p>
        </div>
        <div class="quantity-controls">
          <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
          <span class="quantity-number">2</span>
          <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
        </div>
        <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
      </div>

      <div class="cart-item">
        <img src="https://via.placeholder.com/80" alt="Product 2" class="product-img">
        <div class="product-details">
          <h3>Product 2</h3>
          <p>Price: $15</p>
        </div>
        <div class="quantity-controls">
          <button class="quantity-btn" onclick="updateQuantity(this, -1)">-</button>
          <span class="quantity-number">1</span>
          <button class="quantity-btn" onclick="updateQuantity(this, 1)">+</button>
        </div>
        <p class="remove" onclick="removeItem(this)">✖ REMOVE</p>
      </div>
    </div>
    <div class="total">Total Amount: $35</div>
  </div>
  `;
    }

    function loadHistory() {
      document.getElementById("contentBox").innerHTML = `
  <div id="historyBox" class="box">
    <h3>Product History</h3>
    <div class="products">
      <div class="history-item">
        <img src="https://via.placeholder.com/80" alt="Product 1" class="product-img">
        <div class="product-details">
          <h3>Product 1</h3>
          <p>Order Date: 2024-03-01</p>
          <p>Delivery Status: <b>Delivered</b></p>
          <p>Last Modified: 2024-03-02</p>
          <p>Address: 123 Street, City</p>
        </div>
      </div>

      <div class="history-item">
        <img src="https://via.placeholder.com/80" alt="Product 2" class="product-img">
        <div class="product-details">
          <h3>Product 2</h3>
          <p>Order Date: 2024-02-28</p>
          <p>Delivery Status: <b>In Transit</b></p>
          <p>Last Modified: 2024-03-05</p>
          <p>Address: 456 Avenue, City</p>
        </div>
      </div>

      <div class="history-item">
        <img src="https://via.placeholder.com/80" alt="Product 3" class="product-img">
        <div class="product-details">
          <h3>Product 3</h3>
          <p>Order Date: 2024-02-25</p>
          <p>Delivery Status: <b>Pending</b></p>
          <p>Last Modified: Not Yet</p>
          <p>Address: 789 Road, City</p>
        </div>
      </div>
    </div>
  </div>
  `;
    }
    document.getElementById("cartBtn").addEventListener("click", loadCart);
    document.getElementById("historyBtn").addEventListener("click", loadHistory);
  </script>
</body>

</html>